STATIC_ROOT=/app/static

# Firebase Configuration (use test project)
FIREBASE_PROJECT_ID=your-test-firebase-project
# Add your test Firebase credentials here

# API URLs
BASE_URL=http://localhost:8000

# Security Settings (relaxed for local development)
